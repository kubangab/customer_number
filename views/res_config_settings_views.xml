<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.customer.number</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='companies']" position="inside">
                <h2>Customer Number</h2>
                <div class="row mt16 o_settings_container" id="customer_number_setting">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="customer_number_padding"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="customer_number_padding"/>
                            <div class="text-muted">
                                Use leading zeros for customer numbers
                            </div>
                            <div class="content-group" invisible="not customer_number_padding">
                                <div class="mt16">
                                    <label for="customer_number_digits" class="o_light_label"/>
                                    <field name="customer_number_digits"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="customer_number_generation"/>
                            <field name="customer_number_generation" widget="radio"/>
                            <div class="text-muted">
                                Choose how customer numbers are generated
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="customer_number_start"/>
                            <field name="customer_number_start"/>
                            <div class="text-muted">
                                Starting number for customer numbers
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
