<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherit_customer_number" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.customer.number</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <label for="customer_number" invisible="not is_company"/>
                <div invisible="not is_company" class="o_row">
                    <field name="customer_number" readonly="1" class="oe_inline" options="{'size': 12}"/>
                    <button name="%(customer_number.action_manage_customer_number)d" 
                            string="Set Number" 
                            type="action"
                            class="oe_inline oe_edit_only"
                            context="{'default_partner_id': id}"
                            groups="customer_number.group_customer_number_manager"
                            title="Manage Customer Number"
                            invisible="not id"/>
                    <button name="action_generate_customer_number" 
                            string="Generate" 
                            type="object"
                            class="oe_inline oe_edit_only"
                            groups="customer_number.group_customer_number_manager"
                            invisible="not id or customer_number"/>
                </div>
            </xpath>
        </field>
    </record>
    <record id="view_res_partner_filter_inherit_customer_number" model="ir.ui.view">
        <field name="name">res.partner.select.inherit.customer.number</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="customer_number"/>
            </xpath>
        </field>
    </record>
</odoo>
