<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_update_customer_numbers_form" model="ir.ui.view">
        <field name="name">update.customer.numbers.form</field>
        <field name="model">update.customer.numbers</field>
        <field name="arch" type="xml">
            <form string="Update Customer Numbers">
                <p>This will update all existing customer numbers to match the current digit settings.</p>
                <group>
                    <field name="partner_count"/>
                </group>
                <footer>
                    <button name="action_update_customer_numbers" string="Update" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_update_customer_numbers" model="ir.actions.act_window">
        <field name="name">Update Customer Numbers</field>
        <field name="res_model">update.customer.numbers</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Server Action -->
    <record id="action_server_update_customer_numbers" model="ir.actions.server">
        <field name="name">Update Customer Numbers</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="binding_model_id" ref="base.model_res_partner"/>
        <field name="state">code</field>
        <field name="code">
action = env.ref('customer_number.action_update_customer_numbers').read()[0]
action['context'] = env.context
        </field>
    </record>
</odoo>
